import java.util.List;
import java.util.Optional;

public interface BillService {
    List<Bill> findAll();
    Optional<Bill> findById(Integer id);
    Bill save(Bill bill);
    Bill update(Integer id, Bill bill);
    void deleteById(Integer id);
}
